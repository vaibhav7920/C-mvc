@page
@model AbbyWeb.Pages.Categories.DeleteModel
<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h2 class="text-primary pl-3">Delete Category</h2>
        <hr />
        </div>
       
        <div class="mb-3">
            <label asp-for="Category.Name">  Name :</label>
            <input asp-for="Category.Name"  disabled class="form-control"/>
         
        </div>
         <div class="mb-3">
           <label asp-for="Category.DisplayOrder">  Display Order :</label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control"/>
            
        </div>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-asp-page="Index" class="btn btn-secondary" style="width: 150px;">Delete</a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
